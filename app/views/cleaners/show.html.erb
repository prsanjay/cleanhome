<p id="notice"><%= notice %></p>

<div>
  <h4>CLEANER DETAILS</h4>
  <p>
    <strong>First name:</strong>
    <%= @cleaner.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @cleaner.last_name %>
  </p>

  <p>
    <strong>Quality score:</strong>
    <%= @cleaner.quality_score %>
  </p>
</div>
<hr>

<div>
  <h4>BOOKINGS</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Booking Date</th>
        <th>Booking Time</th>
        <th>Customer Name</th>
        <th>City</th>
      </tr>
    </thead>
    <tbody>
      <% @cleaner.bookings.each_with_index do |booking,index| %>
        <tr>
          <td><%= index = index +1 %></td>
          <td><%= booking.booking_date %></td>
          <td><%= booking.booking_time %></td>
          <td><%= booking.customer.name %></td>
          <td><%= booking.city.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Edit', edit_cleaner_path(@cleaner) %> |
<%= link_to 'Back', cleaners_path %>
