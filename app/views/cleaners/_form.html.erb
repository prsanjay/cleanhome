
<%= form_for(@cleaner) do |f| %>
  <% if @cleaner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cleaner.errors.count, "error") %> prohibited this cleaner from being saved:</h2>

      <ul>
      <% @cleaner.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email_id %><br>
    <%= f.text_field :email_id,:class => "form-control",:type => "email" %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br>
    <% City.all.each do |city| %>
      <label class="checkbox-inline">
        <%= check_box_tag 'city_ids[]', city.id, checked(city.id,@cleaner.id), :id => city.id%>
        <%= h city.name %>
      </label>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :quality_score %><br>
    <%= f.text_field :quality_score,:class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
