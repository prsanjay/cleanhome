
<%= form_for(@cleaner) do |f| %>
  <%= render 'shared/validation_errors', object: @cleaner %>
  <div class="form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email_id %><br>
    <%= f.text_field :email_id,:class => "form-control",:type => "email" %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br>
    <% City.all.each do |city| %>
      <label class="checkbox-inline">
        <%= check_box_tag 'city_ids[]', city.id, checked(city.id,@cleaner.id), :id => city.id%>
        <%= h city.name %>
      </label>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :quality_score %><br>
    <%= f.text_field :quality_score,:class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
